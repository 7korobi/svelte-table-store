{
	"name": "svelte-table-store",
	"version": "0.2.0",
	"homepage": "https://github.com/7korobi/svelte-table-store/blob/main/src/lib/",
	"license": "MIT",
	"keywords": [
		"svelte",
		"component",
		"table",
		"relational"
	],
	"author": {
		"name": "7korobi",
		"email": "7korobi@gmail.com"
	},
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"deploy": "svelte-kit sync && svelte-package",
		"publish:npm": "cd package && npm publish",
		"publish": "run-s format deploy publish:npm",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "1.0.0",
		"@sveltejs/kit": "1.15.2",
		"@sveltejs/package": "1.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.0",
		"svelte-check": "^2.10.2",
		"svelte-preprocess": "^5.0.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.1"
	},
	"dependencies": {
		"svelte-petit-utils": "^0.3.7",
		"tslib": "^2.4.1"
	}
}
